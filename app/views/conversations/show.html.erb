<h1>
  <%= @conversation.subject %>
</h1>

<% @conversation.receipts_for(current_user).each do |r| %>
  <div>
    <%= r.message.sender.name %> <b>wrote:</b>
  </div>

  <div>
    <%= r.message.body %>
  </div>
<% end %>

<%= form_tag conversation_messages_path(@conversation), method: :post do %>
  <div>
    <%= text_area_tag :body%>
  </div>
  <%= submit_tag 'Send' %>
<% end %>
